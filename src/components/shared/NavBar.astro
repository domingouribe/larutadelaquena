---
import Bars from "./Bars.astro";
import Brand from "./Brand.astro";
import data from "../../data/sitedata.json";
const { navItems } = data;
---

<Brand />
<Bars />

<nav class="Header-nav">
	{
		navItems.map((item) => (
			<a href={item.link} class="Header-link">
				{item.name}
			</a>
		))
	}
</nav>

<style lang="scss">
	.Header-nav {
		display: flex;
		flex-flow: row nowrap;
		gap: 1em;

		@media screen and (max-width: 768px) {
			position: absolute;
			top: 60px;
			background-color: rgba(30, 5, 58, 0.952);
			width: 45vw;
			right: 2em;
			display: flex;
			flex-flow: column nowrap;
			justify-content: center;
			align-items: center;
			transition: all 0.3s ease;
			height: 0vh;
			overflow: hidden;
			// pointer-events: none;
			box-shadow: 1px 10px 15px #ffffff59;

			.Header-link {
				color: #fff;
			}

			&.isActive {
				height: 25vh;
			}
		}
	}
	.Header-link {
		color: #000;
		text-decoration: none;
		font-size: 0.8rem;
		text-transform: uppercase;
		font-weight: bolder;
	}
</style>
