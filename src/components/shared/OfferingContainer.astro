---
interface Props {
	title?: string;
	description?: string;
	id?: string;
}
const { title, description, id } = Astro.props;
---

<div class="OfferingsContainer">
	<h2 class="Section-title">{title && title}</h2>
	<p class="Section-description">{description && description}</p>
	<div class="Container">
		<slot />
	</div>
</div>

<style lang="scss">
	.OfferingsContainer {
		width: 100%;
		display: grid;
		gap: 2em;
		grid-auto-rows: auto;
		grid-template-columns: repeat(auto-fit, minmax(min(100%, 15em), 1fr));
		grid-auto-flow: dense;
		height: auto;
	}
</style>
