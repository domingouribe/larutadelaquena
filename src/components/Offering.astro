---
import type { offeringItem } from "@/types/types";
interface Props extends offeringItem {}
import { Image } from "astro:assets";
import Disclaimer from "./shared/Disclaimer.astro";
import Button from "./shared/Button.astro";

const { image, alt, title, description, price, id, youtubeLink } = Astro.props;
---

<div class="Offering" id={id}>
	<div class="OfferingImageBox">
		<Image
			src={image}
			alt={alt}
			width={280}
			height={400}
			class="Offering-image"
		/>
	</div>
	<div class="Offering-text">
		<h1 class="Offering-title">{title}</h1>
		<p class="Offering-description">{description}</p>
		<div class="Offering-price">
			<span class="CLP">CLP $</span>
			{price.clp}
		</div>
		<div class="Offering-price">
			<span class="CLP">CLP $</span>
			{price.usd}
		</div>
		<div class="Disclaimer">
			<Disclaimer />
		</div>

		<div class="Offering-buttons">
			<Button
				link={youtubeLink}
				buttonText="Ver en YouTube"
				classes="Button Button-primary Button-sm"
			/>
			<Button
				link={"/contact"}
				buttonText="ContÃ¡ctame"
				classes="Button Button-sm"
			/>
			<slot />
		</div>
	</div>
</div>

<style lang="scss">
	.Offering {
		display: flex;
		background-color: var(--uiGrayDark);
		height: fit-content;
		color: whitesmoke;
		gap: 0.5em;
		border-radius: 1em;
		overflow: hidden;
		flex-grow: 1;
		flex-flow: column nowrap;
		justify-content: center;
		text-align: left;
		line-height: 1.2;

		.OfferingImageBox {
			overflow: hidden;
		}

		&-image {
			object-fit: cover;
			display: block;
			width: 100%;
			height: 320px;
			transition: all ease 0.3s;

			&:hover {
				scale: 1.1;
				overflow: hidden;
			}
		}
		&-text {
			padding: 1em;
			display: flex;
			flex-flow: column nowrap;
			gap: 1em;
			min-height: 370px;
		}
		&-title {
			margin: 0;
			font-size: 1.1rem;
			font-weight: normal;
			font-weight: bolder;
			text-transform: uppercase;
		}
		&-description {
			margin: 0;
			font-size: 1rem;
		}
		&-price {
			font-size: 2rem;
			font-weight: bold;
			display: flex;
			align-items: center;
			gap: 0.3em;
			margin: 0;
		}
		.CLP {
			font-weight: 400;
			font-size: 1rem;
		}

		&-buttons {
			display: flex;
			gap: 1em;
			justify-content: flex-start;
		}
	}
</style>
