---
import BaseHead from "@/components/shared/BaseHead.astro";
import Header from "@/components/shared/Header.astro";
import Footer from "@/components/shared/Footer.astro";
const { title, description, frontmatter, image } = Astro.props;
import GoogleAnalytics from "@/components/shared/GoogleAnalytics.astro";
---

<!doctype html>
<html lang="es-CL">
	<head>
		<GoogleAnalytics />
		<BaseHead
			title={frontmatter?.title ?? title}
			description={description}
			image={image}
		/>
		<style is:global lang="scss">
			.Post-full img {
				width: 100%;
				height: auto;
				aspect-ratio: 19/9;

				h1 {
					font-size: 3rem;
				}
			}
		</style>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-WF2J4JBC"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->
		<Header />
		<main>
			<div class="Container">
				<div class="Post-full">
					<slot />
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
