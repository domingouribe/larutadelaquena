---
import "../styles/global.scss";
import BaseHead from "../components/shared/BaseHead.astro";
import Header from "../components/shared/Header.astro";
import Footer from "../components/shared/Footer.astro";
import "@fontsource-variable/urbanist";

const { title, description, frontmatter } = Astro.props;
import { fade } from "astro:transitions";
import GoogleAnalytics from "../components/shared/GoogleAnalytics.astro";
---

<!doctype html>
<html lang="es-CL" transition:animate={fade({ duration: "0.3s" })}>
	<head>
		<GoogleAnalytics />
		<BaseHead title={frontmatter?.title ?? title} description={description} />
	</head>
	<body>
		<Header />
		<main>
			<div class="Container">
				<div class="Post-full">
					<slot />
				</div>
			</div>
		</main>
		<Footer />
		<style is:global lang="scss">
			.Post-full img {
				width: 100%;
			}
		</style>
	</body>
</html>
