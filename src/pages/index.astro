---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Button from "@/components/shared/Button.astro";
import OfferingTest from "@/components/Offering.astro";
import OfferingContainer from "@/components/shared/OfferingContainer.astro";
import offerings from "../data/dataQuenas";
import type { Code, Debug } from "astro:components";
---

<Layout
	title="La Ruta de la Quena, el catálogo Web del luthier Domingo Uribe."
	description="Domingo Uribe. Soy Luthier y educador, especializado en la fabricación de la quena de alto nivel. Realizo investigación para el diseño y desarrollo permanente de la quena.">
	<Hero
		preTitle="Bienvenidos a"
		title="La Ruta de La Quena"
		body="Hola. Soy Domingo Uribe, luthier especializado en el diseño y fabricación de la quena. Este es mi Catálogo Web de instrumentos musicales, educación y servicios."
	/>

	<OfferingContainer
		title="Instrumentos destacados"
		description="Estos son los instrumentos destacados de este mes">
		{offerings.slice(0, 3).map((item) => <OfferingTest {...item} />)}
	</OfferingContainer>

	<Button
		link="/catalog"
		buttonText="Mira mi catálogo completo"
		classes="Button Button-md Button-center Button-mt"
		target="_self"
	/>
</Layout>

<style lang="scss">
	.Catalogo-items {
		display: grid;
		gap: 2em;
		grid-auto-rows: auto;
		grid-template-columns: repeat(auto-fit, minmax(min(100%, 15em), 1fr));
		grid-auto-flow: dense;
		height: auto;
	}
</style>
