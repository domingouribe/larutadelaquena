---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Button from "@/components/shared/Button.astro";
import Offering from "@/components/Offering.astro";
import OfferingContainer from "@/components/shared/OfferingContainer.astro";
import offerings from "../data/dataQuenas";
---

<Layout
	title="La Ruta de la Quena, el catálogo Web del luthier Domingo Uribe."
	description="Domingo Uribe. Soy Luthier y educador, especializado en la fabricación de la quena de alto nivel. Realizo investigación para el diseño y desarrollo permanente de la quena y vendo directamente mis instrumentos através de este medio y mis redes sociales.">
	<Hero
		preTitle="Bienvenidos a"
		title="La Ruta de La Quena"
		body="Hola. Soy Domingo Uribe, luthier especializado en el diseño y fabricación de la quena. Este es mi Catálogo Web de instrumentos musicales, educación y servicios."
	/>

	<OfferingContainer
		title="Instrumentos destacados"
		description="Estos son mis instrumentos destacados.">
		{offerings.slice(0, 4).map((item) => <Offering {...item} />)}
	</OfferingContainer>

	<Button
		link="/catalog"
		buttonText="Mira mi catálogo completo"
		classes="Button Button-md Button-center Button-mt"
		target="_self"
	/>
</Layout>
