---
import Layout from "@/layouts/Layout.astro";
import TitleSection from "@/components/shared/TitleSection.astro";
import { Instrument } from "@/types/types";
import InstrumentCard from "@/components/shared/InstrumentCard.astro";
import instrumentsData from "@/data/instrumentsData";
---

<Layout
  title="La Ruta de la Quena, el catálogo Web del luthier Domingo Uribe."
  description="Este es mi Catálogo de instrumentos musicales y mis servicios de educación"
>
  <div class="Container">
    <TitleSection
      title="Mis instrumentos"
      description="Estos son los instrumentos que fabrico"
    />

    <h1>Mis cards de instrumentos aqui</h1>
    {instrumentsData.map((i) => <Instrument item={i} /> )}
  </div>
</Layout>

<style>
  .Catalogo-items {
    display: grid;
    gap: 2em;
    grid-auto-rows: auto;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 15em), 1fr));
    grid-auto-flow: dense;
    height: auto;
  }
</style>
