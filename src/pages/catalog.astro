---
import OfferingContainer from "@/components/shared/OfferingContainer.astro";
import Layout from "@/layouts/Layout.astro";
import OfferingTest from "@/components/OfferingTest.astro";
import offerings from "../data/dataQuenas";
---

<Layout
	title="La Ruta de la Quena, el catálogo Web del luthier Domingo Uribe."
	description="Este es mi Catálogo de instrumentos musicales y mis servicios de educación">
	<OfferingContainer>
		{offerings.map((item) => <OfferingTest {...item} />)}
	</OfferingContainer>
</Layout>

<style>
	.Catalogo-items {
		display: grid;
		gap: 2em;
		grid-auto-rows: auto;
		grid-template-columns: repeat(auto-fit, minmax(min(100%, 15em), 1fr));
		grid-auto-flow: dense;
		height: auto;
	}
</style>
